<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Keeper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@color/activity_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Keeper" parent="Base.Theme.Keeper" />

    <style name="BaseTextStyle">
        <item name="android:textColor"> @color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="light_white" parent="BaseTextStyle">
        <item name="alpha"> 0.44</item>
    </style>

    <style name="title" parent="BaseTextStyle">
        <item name="alpha">0.87</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="description" parent="BaseTextStyle">
        <item name="alpha">0.87</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>